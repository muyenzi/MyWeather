<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="#000000"
        android:layout_marginTop="122dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="9dp"
                android:text="App bar" />
            <TextView
                android:id="@+id/searchTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextView3"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="On the Homepage there is a search widget you have to type in your location or the city name you want to search for, then you will be given accurate information" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="12dp"
        android:layout_below="@id/button1"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TextView333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button1"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="9dp"
                android:text="Search Location " />
            <TextView
                android:id="@+id/TextView3333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextView333"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="first:you search for a location to get  accurate information; second:you have first to access the loation of your phone' and then you will receive a popup message saying 'allow the weather app to access this device's location'third:Tell others what you think about this app by selecting stars, what you selected will be display after submitting;forth:you choose the language you want to use;firth:you choose the language you want to use;sixth:you read policies"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>